{ 
    "compilerOptions": {
        "outDir": "dist/",
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": ["node"],
        "paths": {},
        "lib": ["es2019"],
        "declaration": true,
        "typeRoots": ["node_modules/@types", "src/types"]

        },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/dist"]
}